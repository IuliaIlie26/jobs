<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>

		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/welcome.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>results</from-outcome>
			<to-view-id>/results.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>createCV</from-outcome>
			<to-view-id>/createCV.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>myAccount</from-outcome>
			<to-view-id>/myAccount.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>viewCV</from-outcome>
			<to-view-id>/viewCV.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<application>
		<!-- This supports resources referenced from within css files e.g. url(../fonts/glyphicons) -->
		<resource-handler>org.omnifaces.resourcehandler.UnmappedResourceHandler</resource-handler>
	</application>

</faces-config>
